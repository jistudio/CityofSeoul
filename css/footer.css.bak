#footer .footerTop{width:100%; text-align:center;      }
#footer .footerTop:after{content:""; display:block; clear:both; }
#footer .footerTop ul{margin-bottom:15px;         margin-top: 30px; }
#footer .footerTop ul li{display:inline-block; }
#footer .footerTop ul li a{ display:inline-block; font-weight:bold; 
font-size:14px; padding: 5px 0px; margin-right:15px; }
#footer .footerTop ul li a.homelink{}
#footer .footerTop ul li a.sitemaplink{}
#footer .footerTop address{font-style:normal; padding-bottom: 10px; display:inline-block; }
#footer .footerTop address span{display:inline-block; padding:5px 0;}


#footer .footerBot{width:800px; margin:0 auto;}
#footer .footerBot:after{ display:block; content:""; clear:both; }
#footer .footerSns{width:56%;   float:left; text-align:right;}
#footer .footerSns li{display:inline-block; }
#footer .footerInfo{width:44%; float:left; font-size:12px; }
#footer .footerInfo:after{content:""; display:block; clear:both; }
#footer .footerInfo li{width:50%; float:left;}
#footer .footerInfo span{display:inline-block;}
#footer .footerInfo .call{font-size:28px;  display:inline-block; padding-bottom: 12px; padding-top: 5px;}

/*   ---------------------      위로가기 버튼  -------------------------------    */
.top{width:60px; height:60px; position:fixed; right:10px; bottom:10px; line-height:60px; 
}
.top a{ background-color: #c30029;  display:block; width:100%; height:100%; 
text-align:center; opacity:0.7;  }
.top a img{ vertical-align:middle;}


