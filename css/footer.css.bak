	@media all and ( min-width:480px ) and ( max-width:767px ){ 
		body{ }

		#footer .footerInner { width: 94%; margin:0 auto; }
		#footer .footerSns{width:100%;  float:none; text-align:left; margin-top:20px;}

		#footer .footerInfo{width:100%; float:none; font-size:12px;padding-right:0%;}



